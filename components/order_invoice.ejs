<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= storeName %></title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="components/css/template.css">
  </head>
  <body>
    <div id="container">
      <div class="invoice-top">
        <section id="memo">
          <div class="logo">
            <img src="components/img/logo.png" />
          </div>
          <div class="company-name"><%= storeName %></div>
          <div class="company-info">
            <div><%= storeAddress %></div>
            <br />
            <div><%= storeEmail %></div>
            <br />
            <div><%= storePhone %></div>
          </div>
        </section>
      </div>
      <div class="invoice-body">
        <section id="invoice-title-number">
          <span id="title"><%= text.invoice %></span>
          <br />
          <span id="number">#<%= orderId %></span>
        </section>
        
        <div class="clearfix"></div>

        <section id="client-invoice-info">
          <table cellpadding="0" cellspacing="0">
            <tr>
              <td><%= text.date %></td>
              <td><%= deliveryDate %></td>
              <td></td>
              <td class="gray-text"><%= text.billTo %></td>
            </tr>
            <tr>
              <td><%= text.payment %></td>
              <td><%= paymentType %></td>
              <td></td>
              <td class="bold"><%= userName %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td><%= userAddress %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td><%= userMobile %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td><%= userEmail %></td>
            </tr>
          </table>
        </section>
        
        <div class="clearfix"></div>
        
        <section id="items">
          <table cellpadding="0" cellspacing="0">
            <tr>
              <th><%= text.sl %></th>
              <th><%= text.item %></th>
              <th><%= text.qty %></th>
              <th><%= text.price %></th>
              <th><%= text.discount %></th>
              <th><%= text.total %></th>
            </tr>
            <% for (var i = 0; i < products.length; i++) { %>
            <tr data-iterate="item">
              <td><%= (i + 1) %></td> 
              <td><%= products[i].productName %></td>
              <td><%= products[i].quantity %></td>
              <td><%= currency %><%= (products[i].price).toFixed(2) %></td>
              <td><%= currency %><%= (products[i].dealTotalAmount).toFixed(2) %></td>
              <td><%= currency %><%= (products[i].productTotal).toFixed(2) %></td>
          	</tr>
						<% } %>
          </table>
        </section>
        <section id="sums">
          <table cellpadding="0" cellspacing="0" width="100%">
            <tr>
              <th colspan="5"><%= text.subTotal %></th>
              <td><%= currency %><%= subTotal %></td>
            </tr>
            
            <tr>
              <th colspan="5"><%= text.deliveryCharge %></th>
              <td><%= currency %><%= deliveryCharges %></td>
						</tr>
						
						<tr>
              <th colspan="5"><%= text.tax %></th>
              <td><%= currency %><%= tax %></td>
						</tr>
            
            <tr>
              <th colspan="5"><%= text.couponDiscount %></th>
              <td><%= currency %><%= couponDiscount %></td>
            </tr>

            <% if (isWalletUsed) { %>
              <tr>
                <th colspan="5"><%= text.wallet %></th>
                <td><%= currency %><%= walletAmount %></td>
              </tr>
            <% } %>
            
					  <tr data-hide-on-quote="true">
              <th colspan="5"><%= text.grandTotal %></th>
              <td><%= currency %><%= grandTotal %></td>
            </tr>
          </table>
        </section>
			 </div>
			 <div class="bottom-stripe"></div>
    </div>
  </body>
</html>
